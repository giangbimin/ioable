<div class="well">
	<h4>Leave a Comment:</h4>
  <%= simple_form_for ([@article, @article.comments.build]) do |f| %>
    <div class="form-group">
      <%= f.text_area :body, class: "form-control", rows: "3"%>
    </div>
    <div class="form-group">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div> 
  <% end %>
</div>
