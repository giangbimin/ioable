
<div class="row">
	<!-- Blog Post Content Column -->
	<div class="col-lg-8">
		<!-- Blog Post -->
		<!-- Title -->
		<h1><%= @article.title %></h1>
		<!-- Author -->
		<p class="lead">
			by <a href="#">Start Bootstrap</a>
		</p>
		<hr>
		<!-- Date/Time -->
		<div class="row">
			<div class="col-lg-6">
				<p><span class="glyphicon glyphicon-time"></span> Posted on <%= @article.created_at.strftime('%b, %d, %Y')%></p>
			</div>
			<div class="col-lg-6 text-right">
				<%= link_to 'Back', articles_path, class: "btn btn-primary"  %>
				<% if user_signed_in? && current_user.id ==  @article.user_id %>
					<%= link_to edit_article_path(@article), class: "btn btn-primary" do %>
					  Edit <span class="glyphicon glyphicon-chevron-right"></span>
					<%end%>
					<%= link_to @article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" do %>
					  Destroy <span class="glyphicon glyphicon-chevron-right"></span>
					<%end%>
				<% end %>
			</div>
		</div>
		<hr>
		<p>Tags: 
      <% @article.tag_list.each do |tag| %>
        <%= link_to tag, controller: "tags", action: "show", id: tag%>
     	<% end %>
    </p>
		<!-- Preview Image -->
		<img class="img-responsive" src="http://placehold.it/900x300" alt="">
		<hr>
		<!-- Post Content -->
		<p class="lead"></p>
		<p><%= raw(markdown @article.body) %></p>
		<hr>
		<!-- Blog Comments -->
		<!-- Comments Form -->
		<div class="well">
			<h4>Leave a Comment:</h4>
			<form role="form">
				<div class="form-group">
					<textarea class="form-control" rows="3"></textarea>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
		<hr>
		<!-- Posted Comments -->
		<!-- Comment -->
		<div class="media">
			<a class="pull-left" href="#">
				<img class="media-object" src="http://placehold.it/64x64" alt="">
			</a>
			<div class="media-body">
				<h4 class="media-heading">Start Bootstrap
					<small>August 25, 2014 at 9:30 PM</small>
				</h4>
