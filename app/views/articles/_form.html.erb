<div class="container">
  <%= simple_form_for @article, remote: true do |f| %>
    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:" %>
        </h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
            <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label><%= f.label :title %></label>
      <%= f.input :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <label><%=  f.label :tag_list, "Tags: (Separate the tag by comma) " %></label>
      <%= f.text_field :tag_list, id: "myTags", class: "form-control"%>
    </div>
    <div class="form-group">
      <label><%= f.label :body %></label>
      <%= f.text_area :body, class: "form-control", rows: "20"%>
    </div>
    <div class="form-group">
      <%= f.button :submit %>
    </div> 
  <% end %>
</div>
