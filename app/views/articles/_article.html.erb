<div class="well">
    <h2>
    <%= link_to article.title, article %>
    </h2>
    <% if article.user.present? %>
      <p class="lead">
      Created by 
    <% if article.user.name.present? %>
        <strong><%= article.user.name.to_s %></strong>
    <%else%>
        <strong><%= article.user.email.to_s %></strong>
    <% end %> 
        <small><%= time_ago_in_words(article.created_at)%> ago </small>
      </p>
    <% end %>
    <p>Tag: 
      <% article.tag_list.each do |tag| %>
        <%= link_to tag, controller: "tags", action: "show", id: tag%>
      <% end %>
    </p>
    <hr>
    <% if article.picture.present? %>
     <%= image_tag article.picture.medium.url, class: "img-responsive", alt: article.title %>
    <hr>
    <% end %>
    <p><%= raw(article.body).truncate(358) %>....</p>
    <hr>
            <%= article.view %> <span class="glyphicon glyphicon-comment"></span>
            <%= article.comments.count %> <span class="glyphicon glyphicon-eye-open"></span>
      <%= link_to article , class: "btn btn-primary" do %>
        Read More <span class="glyphicon glyphicon-chevron-right"></span>
      <%end%>
      <% if user_signed_in? && current_user.id ==  article.user_id %>
        <%= link_to edit_article_path(article), class: "btn btn-primary" do %>
        Edit <span class="glyphicon glyphicon-chevron-right"></span>
        <%end%>
        <%= link_to article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" do %>
          Destroy <span class="glyphicon glyphicon-chevron-right"></span>
        <%end%>
      <% end %>
    <hr>
</div>